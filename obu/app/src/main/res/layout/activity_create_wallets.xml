<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateWallets">


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_create_identity_wallet"
        android:layout_width="339dp"
        android:layout_height="76dp"
        android:drawableStart="@drawable/wallet_identity"
        android:onClick="onClick_createIdentityWallet"
        android:text="@string/create_identity_wallet2"
        android:textAlignment="center"
        android:textStyle="bold"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_credential"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_create_credential"
        android:layout_width="339dp"
        android:layout_height="76dp"
        android:onClick="onClick_createCredential"
        android:text="Create OBU Credentials"
        android:textAlignment="center"
        android:textStyle="bold"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_create_iota_wallet"
        android:layout_width="339dp"
        android:layout_height="76dp"
        android:layout_marginTop="64dp"
        android:drawableStart="@drawable/wallet_iota"
        android:onClick="onClick_createIOTAWallet"
        android:text="@string/create_iota_wallet2"
        android:textStyle="bold"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_credential"
        app:roundedCorners="true"
        app:showOutline="false" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="191dp"
        android:layout_height="29dp"
        android:text="Create your wallets"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_identity_wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.527" />


</androidx.constraintlayout.widget.ConstraintLayout>