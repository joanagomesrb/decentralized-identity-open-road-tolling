<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartTravel">

    <Button
        android:id="@+id/btn_to_start_travel"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_rounded_edge"
        android:elevation="10dp"
        android:onClick="onClick_startTravel2"
        android:text="@string/start_travel"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <Button
        android:id="@+id/btn_stop_travel"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/btn_rounded_edge"
        android:onClick="onClick_stopTravel2"
        android:text="@string/stop_travel"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_start_travel"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>